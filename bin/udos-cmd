#!/bin/bash
# =============================================================================
# uDOS Terminal Helper - Run commands without pager issues
# =============================================================================
# Usage: udos-cmd git log --oneline
#        udos-cmd python test.py
#        udos-cmd ls -la

set -e

# Disable all pagers
export PAGER=cat
export GIT_PAGER=cat
export LESS=-R
export PYTHONUNBUFFERED=1

# Run command with clean output
"$@"
