{
  "name": "uDOS Web Extensions",
  "version": "1.0.1",
  "description": "Comprehensive web-based extensions for the uDOS Universal Data Operating System",
  "release_date": "2025-11-02",
  "compatibility": {
    "uDOS": ">=1.3.0",
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "extensions": {
    "dashboard": {
      "version": "1.0.1",
      "description": "Modern desktop interface with macOS styling and screensaver integration",
      "port": 8001,
      "features": [
        "Desktop icon grid layout",
        "Light/Dark mode toggle",
        "After Dark screensaver integration",
        "Classic Mac styling with system.css",
        "Real-time server monitoring",
        "Activity logging system",
        "Keyboard shortcuts",
        "Chunky retro fonts (VT323)"
      ],
      "dependencies": ["classic.css", "after-dark-css"]
    },
    "css-frameworks": {
      "version": "1.0.1",
      "description": "Showcase of retro CSS frameworks with live demos",
      "features": [
        "classic.css - Mac OS 8.1 styling",
        "NES.css - 8-bit Nintendo interface",
        "system.css - Classic Mac System 6",
        "after-dark-css - Screensaver collection"
      ],
      "ports": {
        "classic-demo": 8885,
        "nes-demo": 8884,
        "system-demo": 8883,
        "afterdark-demo": 8882
      },
      "launcher": "launch_all.py"
    },
    "terminal": {
      "version": "1.0.1",
      "description": "Web-based terminal interface",
      "port": 8890,
      "features": [
        "Browser-based terminal",
        "Command execution",
        "File system access",
        "Session persistence"
      ]
    },
    "markdown-viewer": {
      "version": "1.0.1",
      "description": "Web-based markdown file viewer and editor",
      "port": 8889,
      "features": [
        "Live markdown preview",
        "File browser integration",
        "Syntax highlighting",
        "Export functionality"
      ]
    },
    "font-editor": {
      "version": "1.0.1",
      "description": "Web-based font editor and bitmap font creator",
      "port": 8888,
      "features": [
        "Bitmap font editing",
        "Character mapping",
        "Font preview",
        "Export formats"
      ]
    },
    "typo": {
      "version": "1.0.1",
      "description": "Modern web-based markdown editor with live preview",
      "port": 5173,
      "external": true,
      "repository": "https://github.com/rossrobino/typo",
      "features": [
        "Live markdown preview",
        "Slide presentation mode",
        "Code execution",
        "File System API support",
        "Auto-save functionality"
      ]
    }
  },
  "shared_resources": {
    "classic.css": "Shared CSS framework for classic Mac styling",
    "fonts": "Retro font collection",
    "icons": "Classic desktop icons"
  },
  "automation": {
    "launch_all": "Python script to start all web extensions",
    "launch_web.py": "Individual web extension launcher",
    "launch_web.sh": "Shell script launcher"
  },
  "changelog": [
    {
      "version": "1.0.1",
      "date": "2025-11-02",
      "changes": [
        "Added comprehensive CSS framework showcase with 4 retro frameworks",
        "Implemented desktop interface with macOS-style icon grid layout",
        "Integrated After Dark screensaver system with multiple modes",
        "Added light/dark mode toggle with CSS variables",
        "Enhanced typography with chunky retro fonts (VT323)",
        "Created unified launcher for all web extensions",
        "Added real-time server monitoring and status indicators",
        "Implemented keyboard shortcuts and accessibility features",
        "Enhanced classic Mac styling throughout all interfaces",
        "Added comprehensive documentation and attribution"
      ]
    }
  ],
  "license": "MIT",
  "attribution": {
    "classic.css": "MIT License - https://github.com/NigelOToole/classic.css",
    "NES.css": "MIT License - https://github.com/nostalgic-css/NES.css",
    "system.css": "MIT License - https://github.com/sakofchit/system.css",
    "after-dark-css": "MIT License - https://github.com/bryanbraun/after-dark-css",
    "typo": "MIT License - https://github.com/rossrobino/typo",
    "VT323 Font": "SIL Open Font License"
  }
}
