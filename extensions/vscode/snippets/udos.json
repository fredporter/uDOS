{
  "State Block": {
    "prefix": "udos-state",
    "body": [
      "```state",
      "\\$${1:var} = ${2:value}",
      "```"
    ],
    "description": "Insert a state block for initializing variables"
  },
  "Set Block": {
    "prefix": "udos-set",
    "body": [
      "```set",
      "inc \\$${1:var} ${2:1}",
      "# set \\$${1:var} ${3:value}",
      "# dec \\$${1:var} ${4:1}",
      "```"
    ],
    "description": "Insert a set block for mutations (inc/dec/set/toggle)"
  },
  "If Else Block": {
    "prefix": "udos-if",
    "body": [
      "```if",
      "${1:condition}",
      "```",
      "",
      "```panel",
      "${2:success output}",
      "```",
      "",
      "```else",
      "```",
      "",
      "```panel",
      "${3:alternate output}",
      "```"
    ],
    "description": "Insert an if/else flow with panel outputs"
  },
  "Form Block": {
    "prefix": "udos-form",
    "body": [
      "```form",
      "field: ${1:text}",
      "var: \\$${2:player.name}",
      "label: ${3:Label}",
      "placeholder: ${4:Placeholder}",
      "required: ${5:true}",
      "",
      "field: ${6:number}",
      "var: \\$${7:player.age}",
      "label: ${8:Age}",
      "default: ${9:25}",
      "```"
    ],
    "description": "Insert a form block with common field types"
  },
  "Navigation Block": {
    "prefix": "udos-nav",
    "body": [
      "```nav",
      "choice: ${1:Label}",
      "target: ${2:#destination}",
      "when: ${3:$condition}",
      "",
      "choice: ${4:Another label}",
      "target: ${5:#other}",
      "```"
    ],
    "description": "Insert navigation choices with optional conditions"
  },
  "Panel Block": {
    "prefix": "udos-panel",
    "body": [
      "```panel",
      "${1:Your content with \\$variables}",
      "```"
    ],
    "description": "Insert a panel block with variable interpolation"
  },
  "Map Block": {
    "prefix": "udos-map",
    "body": [
      "```map",
      "width: ${1:10}",
      "height: ${2:8}",
      "viewport: ${3:true}",
      "",
      "sprite: ${4:player}",
      "ch: ${5:@}",
      "x: ${6:$player.x}",
      "y: ${7:$player.y}",
      "```"
    ],
    "description": "Insert a map block with viewport and sprite coordinates"
  }
}
