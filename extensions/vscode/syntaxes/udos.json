{
  "name": "uDOS Runtime",
  "scopeName": "source.udos",
  "patterns": [
    {
      "name": "comment.line.number-sign.udos",
      "match": "#.*$"
    },
    {
      "name": "entity.name.tag.udos",
      "match": "^\\s*[A-Za-z_][\\w-]*\\s*:(?=\\s)"
    },
    {
      "name": "variable.other.udos",
      "match": "\\$[A-Za-z_][\\w\\.\\[\\]]*"
    },
    {
      "name": "keyword.control.udos",
      "match": "\\b(?:state|set|form|if|else|nav|panel|map)\\b"
    },
    {
      "name": "keyword.operator.assignment.udos",
      "match": "\\b(?:inc|dec|toggle|set)\\b"
    },
    {
      "name": "keyword.other.directive.udos",
      "match": "\\b(?:choice|target|to|when|field|var|label|placeholder|required|default|options|viewport|width|height|center|layer|style|show|sprite|sprites|x|y|ch)\\b"
    },
    {
      "name": "keyword.operator.logical.udos",
      "match": "\\b(?:and|or|not)\\b"
    },
    {
      "name": "keyword.operator.comparison.udos",
      "match": "(?:==|!=|>=|<=|>|<)"
    },
    {
      "name": "constant.language.boolean.udos",
      "match": "\\b(?:true|false|null)\\b"
    },
    {
      "name": "constant.numeric.udos",
      "match": "-?\\b\\d+(?:\\.\\d+)?\\b"
    },
    {
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.udos"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.udos"
        }
      },
      "name": "string.quoted.double.udos",
      "patterns": [
        {
          "name": "constant.character.escape.udos",
          "match": "\\\\."
        }
      ]
    },
    {
      "begin": "'",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.udos"
        }
      },
      "end": "'",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.udos"
        }
      },
      "name": "string.quoted.single.udos",
      "patterns": [
        {
          "name": "constant.character.escape.udos",
          "match": "\\\\."
        }
      ]
    }
  ],
  "repository": {},
  "fileTypes": []
}
