{
  "$schema": "../container.schema.json",
  "container": {
    "id": "sonic",
    "name": "Sonic Screwdriver",
    "description": "USB boot stick builder + device catalog for uDOS (Ventoy + v2 partition layouts).",
    "type": "git",
    "source": "https://github.com/fredporter/uDOS",
    "ref": "main",
    "cloned_at": null,
    "last_update": null,
    "commit": null,
    "version": "1.0.1"
  },
  "policy": {
    "read_only": true,
    "auto_update": false,
    "update_channel": "wizard_only",
    "verify_signatures": false
  },
  "integration": {
    "wrapper_path": "sonic",
    "service_path": "wizard/services/sonic_service.py",
    "handler_path": "core/commands/sonic_handler.py",
    "install_script": "wizard/tools/sonic_setup.py"
  },
  "metadata": {
    "license": "MIT",
    "homepage": "https://github.com/fredporter/uDOS",
    "documentation": "sonic/docs/README.md",
    "maintainer": "Fred Porter / uDOS",
    "category": "device_tools"
  },
  "capabilities": {
    "device_catalog": true,
    "usb_builder": true,
    "flash_packs": true,
    "windows_media_modes": true,
    "payload_pipeline": "sonic/scripts"
  },
  "system_requirements": {
    "platforms": ["linux", "alpine", "ubuntu"],
    "requires_root": true,
    "dependencies": ["bash", "parted", "rsync", "python3"]
  },
  "repo_path": "memory/library/containers/sonic"
}
