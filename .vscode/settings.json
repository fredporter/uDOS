{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.indexing": false,
  "python.analysis.autoSearchPaths": false,
  "python.analysis.extraPaths": [],
  "pylance.typeCheckingMode": "off",
  "[python]": {
    "editor.formatOnSave": false
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.pytest_cache": true,
    "**/.cache": true,
    ".venv": true,
    "**/.archive": true,
    "**/.dev": true,
    "**/target": true
  },
  "files.watcherExclude": {
    "**/.venv/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/target/**": true,
    "**/.cache/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.venv": true,
    "**/target": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.archive": true,
    "**/.dev": true,
    "memory/**": true,
    "**/.git": true
  },
  "editor.formatOnSave": false,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "/bin/bash",
      "args": ["-l", "-i"],
      "icon": "terminal-bash"
    }
  },
  "terminal.integrated.env.osx": {
    "UDOS_ROOT": "${workspaceFolder}",
    "UDOS_WIZARD_PORT_FILE": "${workspaceFolder}/.wizard-port",
    "PAGER": "cat",
    "GIT_PAGER": "cat",
    "PYTHONUNBUFFERED": "1",
    "LESS": "-R"
  },
  "terminal.integrated.env.linux": {
    "UDOS_ROOT": "${workspaceFolder}",
    "UDOS_WIZARD_PORT_FILE": "${workspaceFolder}/.wizard-port",
    "PAGER": "cat",
    "GIT_PAGER": "cat",
    "PYTHONUNBUFFERED": "1",
    "LESS": "-R"
  },
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  }
}
