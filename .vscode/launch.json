{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run VS Code Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/extensions/vscode"
            ],
            "outFiles": [
                "${workspaceFolder}/extensions/vscode/out/**/*.js"
            ]
        },
        {
            "name": "uDOS: Interactive Mode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/uDOS.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "uDOS: Run Shakedown Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/uDOS.py",
            "args": ["memory/tests/shakedown-script.md"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "uDOS: Integration Tests (TypeScript)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/memory/tests/integration/test_v1_0_2_integration.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "uDOS: Standalone Tests (TypeScript)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/memory/tests/test_v1_0_2_standalone.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug: Dev Tools Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/dev/tools/test_resource_help.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": null,
            "postDebugTask": null
        },
        {
            "name": "ðŸ‘º Goblin Dev Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/dev/goblin/goblin_server.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "TypeScript: Debug Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/uDOS.py",
            "args": ["${file}"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
