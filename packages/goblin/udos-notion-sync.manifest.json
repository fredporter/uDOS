{
  "component": "udos-notion-sync",
  "name": "Goblin Notion Sync Service",
  "version": {
    "major": 0,
    "minor": 1,
    "patch": 0
  },
  "display": "v0.1.0",
  "type": "tcz",
  "description": "Notion webhooks with SQLite queue (Phase B complete; conflict detection & publish mode deferred)",
  "author": "Fred Porter",
  "license": "MIT",

  "dependencies": {
    "system": {
      "python": ">=3.10",
      "packages": ["requests>=2.31", "pydantic>=2.0"]
    },
    "components": {
      "udos-goblin": ">=0.1.0"
    }
  },

  "platform": ["linux", "macos"],
  "min_udos_version": "1.0.2",

  "files": {
    "python": "dev/goblin/services/notion_sync_service.py",
    "db": "memory/goblin/notion_sync.db",
    "config": "dev/goblin/config/notion_keys.example.json"
  },

  "installation": {
    "mode": "manual",
    "script": "install.sh",
    "post_install": "pip install requests pydantic && python -m dev.goblin.services.notion_sync_service --init-db"
  },

  "api_endpoints": [
    "POST /api/v0/notion/webhook"
  ],

  "status": "phase-b-complete",
  "deferred": ["conflict-detection", "publish-mode"],

  "notes": [
    "Phase A: Database schema (mappings, queue, sync_log) ✅",
    "Phase B: Webhook handlers + queue processing (19 tests) ✅",
    "Phase C.3: Conflict detection ⏸️",
    "Phase D: Publish mode (local → Notion) ⏸️",
    "SQLite queue for reliable delivery",
    "Requires notion-integration-token in secret store"
  ],

  "released": "2026-01-15",
  "channel": "alpha",
  "signed": false,
  "checksum": "sha256:placeholder"
}
